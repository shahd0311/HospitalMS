@model HospitalMS.ViewModel.LoginUserViewModel

@{
    ViewData["Title"] = "Login";
}
<head style="height:-moz-fit-content; scroll-behavior:auto">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/StyleSheet.css">
</head>

<body style="height:-moz-fit-content; scroll-behavior:auto ">


<h4>LoginUserViewModel</h4>
<hr />
<div class="form-body" style="height:-moz-fit-content; scroll-behavior:auto">
    <div class="form-holder">
        <div class="form-content">
            <div class="form-items">
                    <h2 style="color:white">Login</h2>
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-check">
                            <label asp-for="@Model.RememberMe" class="form-check-label"> Remember Me</label>
                            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                        </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
                <br />
                    <div>
                        <a asp-action="Register"><button class="btn btn-primary">Create new user</button></a>
                    </div>
            </div>
        </div>
    </div>
</div>



</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
