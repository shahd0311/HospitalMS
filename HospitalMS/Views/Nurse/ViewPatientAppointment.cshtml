@model List<BookingNurseViewModel>
@{
    ViewData["Title"] = "ViewPatientAppointment";
}

<h1 style="color:black"> Nurse Appointment </h1>

<br />
<br />

<div style="text-align:center">
    @if (!Model.Any())
    {
        <h1 class="display-4">You have no appointments yet </h1>
    }
    else
    {
        <table class="table table-responsive table-hover">
            <thead class="table-light">
                <tr>
                    <th>Doctor Image</th>
                    <th>Doctor Name</th>
                    <th>Patient Name</th>
                    <th>Date</th>
                    <th>Time</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="~/Images/Doctors/@item.DoctorImage" style="width:100px; height:100px" /></td>
                    <td>@item.DoctorFirstName @item.DoctorLastName</td>
                    <td>@item.PatientFirstName @item.PatientLastName</td>
                    <td>@item.Date</td>
                    <td>@item.Time</td>
                </tr>
            }
        </table>
    }
</div>